<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mindweaver.smartscan.views.ProductActivity">


    <TextView
        android:id="@+id/detailsProduct"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="Detalle Producto"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/productPhotoIv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nameProductTv"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="17dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/nameLabelTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detailsProduct"
        android:padding="8dp"
        android:text="Nombre:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameProductTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nameLabelTv"
        android:layout_alignBottom="@+id/nameLabelTv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="74dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/brandLabelTv"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameLabelTv"
        android:padding="8dp"
        android:text="Marca:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameBrandTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/brandLabelTv"
        android:layout_alignBottom="@+id/brandLabelTv"
        android:layout_alignStart="@+id/nameProductTv"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/priceTv"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/brandLabelTv"
        android:padding="8dp"
        android:text="Precio:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/detailPrice"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/priceTv"
        android:layout_alignBottom="@+id/priceTv"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/nameBrandTv"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/placeTv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/codeLabelTv"
        android:padding="8dp"
        android:text="Lugar de Compra:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/placeEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/placeTv"
        android:layout_alignStart="@id/codeBarDetail"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/codeLabelTv"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceTv"
        android:layout_alignParentStart="true"
        android:padding="8dp"
        android:text="CÃ³digo de Barra"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/codeBarDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/codeLabelTv"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/nameLabelTv"
        android:textSize="16sp"
        android:textStyle="bold" />



    <Button
        android:id="@+id/saveBtn"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@id/placeTv"
        android:layout_centerHorizontal="true"
        android:text="GUARDAR PRODUCTO" />

</RelativeLayout>
